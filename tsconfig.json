{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "baseUrl": "./src",  // Set the base directory for module resolution
      "paths": {
        "*": ["*", "src/*"]  // Map all imports to the 'src' directory
      }
    },
    "include": ["src/**/*.ts"]
  }
  